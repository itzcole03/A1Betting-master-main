{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ§¼ Lint & Autofix",
      "type": "shell",
      "command": "npx eslint \"src/**\" \"frontend/src/**\" --ext .ts,.tsx --fix",
      "problemMatcher": ["$eslint-stylish"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "ğŸ§ª Type Check",
      "type": "shell",
      "command": "npx tsc --noEmit",
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
    {
      "label": "ğŸ” Run Vitest Tests",
      "type": "shell",
      "command": "npx vitest run",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "ğŸ›  Frontend Build (Vite)",
      "type": "shell",
      "command": "cd frontend && npm run build",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "ğŸ” Full ALPHA1 Check (Lint + Type + Build + Test)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "ğŸ§¼ Lint & Autofix",
        "ğŸ§ª Type Check",
        "ğŸ” Run Vitest Tests",
        "ğŸ›  Frontend Build (Vite)"
      ],
      "group": "build"
    }
  ]
}
